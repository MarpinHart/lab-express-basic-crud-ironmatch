
<main class="container"></main>
<h1>Welcome to Ironmatch</h1>
<form action="/" method="POST">
  <table class="table">

    <body>
      <tr>
        <th>Player 1</th>
        <th>Score 1</th>
        <th>Score 2</th>
        <th>Player 2</th>
        <th>Action</th>
      </tr>
      {{#each matches}}
      <tr>
        <td>{{player1}}</td>
        <td>{{score1}}</td>
        <td>{{score2}}</td>
        <td>{{player2}}</td>
        <td><a href="/matches/delete/{{_id}}" class="btn btn-outline-danger btn-sm">Delete</a></td>
      </tr>
      {{/each}}
      <tr>
        <td><input class="form-control" type="text" name="player1"></td>
        <td><input class="form-control" type="number" name="score1"></td>
        <td><input class="form-control" type="number" name="score2"></td>
        <td><input class="form-control" type="text" name="player2"></td>
        <td><button type="submit" class="btn btn-outline-primary">Add</button></td>
      </tr>
    </body>
  </table>
</form>